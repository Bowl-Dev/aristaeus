{
  "name": "aristaeus",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "backend",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=@aristaeus/backend",
    "build": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=@aristaeus/backend",
    "preview": "npm run preview --workspace=frontend",
    "check": "npm run check --workspace=frontend",
    "check:watch": "npm run check:watch --workspace=frontend",
    "db:generate": "npm run db:generate --workspace=@aristaeus/backend",
    "db:push": "npm run db:push --workspace=@aristaeus/backend",
    "db:migrate": "npm run db:migrate --workspace=@aristaeus/backend",
    "db:seed": "npm run db:seed --workspace=@aristaeus/backend",
    "db:studio": "npm run db:studio --workspace=@aristaeus/backend"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
